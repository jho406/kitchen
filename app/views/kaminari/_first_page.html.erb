<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if prefix_path %>
  <% uri = URI(url) %>
  <% n_params = CGI.parse(uri.query || '') %>
  <% n_params.delete('__') %>
  <% n_params.delete('_breezy_filter') %>
  <% n_params['_breezy_filter'] = prefix_path %>
  <% uri.query = URI.encode_www_form(n_params) %>
  <% url = uri.to_s %>
<% end %>

<li class="first">
  <%= link_to_unless current_page.first?, t('views.pagination.first').html_safe, url, remote: remote, 'data-bz-remote': true %>
</li>
